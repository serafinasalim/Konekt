@section Script{
<script>
$(document).ready(function () {
    loadData();
    get_karyawan();
    $("form-simpan").validate();
});

function loadData()
{
    $("#tabel-pengguna").DataTable().destroy();
    $("#tabel-pengguna").DataTable({
        processing: true, // for show progress bar
        serverSide: true, // for process server side
        filter: true, // this is for disable filter (search box)
        orderMulti: false, // for disable multiple column at once
        order: [[0, "asc"]],
        ajax: {
            url: "@Url.Action("GetUser", "Settings")",
            type: "GET",
            datatype: "json",
            data: function(d){
                d.page = Math.ceil(d.start / d.length) + 1; // currentPage
                d.page_size = d.length; // pageSize (10, 25, 50, 100)

                var columnIndex = d.order[0].column; // Get the column index being sorted
                d.sortColumn = d.columns[columnIndex].data; // Get the column name

                d.sortOrder = d.order[0].dir; // Get the sort order (asc or desc)

                d.search = d.search.value;

                // Remove the default DataTables parameters
                delete d.draw;
                delete d.start;
                delete d.length;
                delete d.columns;
                delete d.order;
                delete d._;
            },
            error: function (xhr, error, code) {
                location.reload();
            }
        },
        language:{
            paginate:{
                // remove previous & next text from pagination
                // previous: '&nbsp;',
                // next: '&nbsp;'
            }
        },
        columns: [
            { data: 'username', name: 'username', "autoWidth": false },
            { data: 'employee_name', name: 'employee_name', "autoWidth": false },
            { data: 'role', name: 'role', "autoWidth": false },
            { 
                data: '', name: '', "autoWidth": false, "orderable": false,
                mRender: function (data, type, row) {
                    return `
                        <button class='btn btn-warning' title='Edit' onclick='edit(
                            "${row.user_id}",
                            "${encodeURIComponent(row.employee_name)} ( ${encodeURIComponent(row.username)} )",
                            "${encodeURIComponent(row.role)}",
                            "${encodeURIComponent(row.password)}"
                        )'><i class="fa fa-pencil-square-o""></i></button>
                        <button class='btn btn-danger' title='Delete' onclick='hapus(
                            "${row.user_id}",
                            "${encodeURIComponent(row.employee_name)} ( ${encodeURIComponent(row.username)} )"
                        )'><i class="fa fa-trash-o"></i></button>`
                }
            }
        ]
    });
}

function tambah()
{
    // $('#form-simpan').validate().resetForm();
    // $('.form-control, .form-select').removeClass("error");
    $('#form-simpan').trigger('reset').removeClass('was-validated');
    $('#judul-modal-tambah').text("Tambah Data Karyawan");
    $('#tombol').val("1");

    $("#modal-tambah").modal("show");
}

$('#form-simpan').submit(function (e) {
    e.preventDefault();
    var reportValidity = $('#form-simpan')[0].reportValidity();
   
    if(reportValidity){
        var formData = $('#form-simpan').serialize();

        $.ajax({
            url: "@Url.Action("SimpanUser", "Settings")",
            type: "POST",
            data: $('#form-simpan').serialize(),
            cache: false,
            success: function (respon) {
                if (respon == 1) {
                    Swal.fire({
                        title: 'Data Pengguna Berhasil Ditambahkan!',
                        buttons: false,
                        timer: 1500,
                        icon: "success",
                    }).then(function(){
                        loadData();
                        $("#modal-tambah").modal("hide");
                    });
                }
                else if (respon == 2) {
                    Swal.fire({
                        title: 'Data Pengguna Berhasil Diubah!',
                        buttons: false,
                        timer: 1500,
                        icon: "success",
                    }).then(function(){
                        loadData();
                        $("#modal-tambah").modal("hide");
                    });
                }
            },
            error: function (error) {
                Swal.fire({
                    title: 'Data gagal diproses!',
                    text: 'Error: ' + JSON.stringify(error),
                    buttons: false,
                    timer: 3000,
                    icon: "error",
                });
            }
        }); 
    }
});

function edit(id, nama, hak, pass)
{
    console.log(decodeURIComponent(hak));
    console.log(decodeURIComponent(pass));

    $('#form-edit').trigger('reset').removeClass('was-validated');
    $('#tombol').val("2");
    $('#judul-modal-edit').text("Edit Data Pengguna");

    $("#id_user").val(id); 
    $("#nama_user").val(decodeURIComponent(nama)); 
    $("#role_user2").val(decodeURIComponent(hak));
    $("#pass_user2").val(decodeURIComponent(pass));

    $("#modal-edit").modal("show");
}

$('#form-edit').submit(function (e) {
    e.preventDefault();
    var reportValidity = $('#form-edit')[0].reportValidity();
   
    if(reportValidity){
        var formData = $('#form-edit').serialize();

        $.ajax({
            url: "@Url.Action("SimpanUser", "Settings")",
            type: "POST",
            data: $('#form-edit').serialize(),
            cache: false,
            success: function (respon) {
                if (respon == 1) {
                    Swal.fire({
                        title: 'Data Pengguna Berhasil Ditambahkan!',
                        buttons: false,
                        timer: 1500,
                        icon: "success",
                    }).then(function(){
                        loadData();
                        $("#modal-tambah").modal("hide");
                    });
                }
                else if (respon == 2) {
                    Swal.fire({
                        title: 'Data Pengguna Berhasil Diubah!',
                        buttons: false,
                        timer: 1500,
                        icon: "success",
                    }).then(function(){
                        loadData();
                        $("#modal-tambah").modal("hide");
                    });
                }
            },
            error: function (error) {
                Swal.fire({
                    title: 'Data gagal diproses!',
                    text: 'Error: ' + JSON.stringify(error),
                    buttons: false,
                    timer: 3000,
                    icon: "error",
                });
            }
        }); 
    }
});

function hapus(id, nama)
{
    Swal.fire({
        title: 'Hapus Data',
        html: 'Yakin menghapus <b>' + decodeURIComponent(nama) + '</b>?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#DD3333',
        confirmButtonText: 'Hapus',
        cancelButtonText: 'Batal',
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: "@Url.Action("HapusUser", "Settings")",
                type: "POST",
                data: {id: id},
                cache: false,
                success: function (respon) {
                    if (respon == 1) {
                        Swal.fire({
                            title: 'Data Pengguna Berhasil Dihapus!',
                            buttons: false,
                            timer: 2000,
                            icon: "success",
                        }).then(function(){
                            loadData();
                        });
                    }
                },
                error: function (error) {
                    Swal.fire({
                        title: 'Data gagal diproses!',
                        text: 'Error: ' + JSON.stringify(error),
                        buttons: false,
                        icon: "error"
                    });
                }
            });
        }
    })
}

function get_karyawan()
{
    $("#nim_user").select2({
        width: 'resolve',   // to adjust proper width of select2 wrapped elements
        allowClear: true,
        placeholder: "--Pilih Karyawan--",
        dropdownParent: $("#modal-tambah"),
        ajax: {
            url: "@Url.Action("GetDropdownNim", "Settings")", // Controller - Select2Demo and Action -AccessRemoteData
            type: "GET",
            dataType: 'json',
            data: function (params) {
                return {
                    term: params.term
                };
            },
            processResults: function (data) {
                return {
                    results: data.resultList
                };
            }
        }
    });
}

</script>
}